@using InsuranceCard1.Models
@model CustomerUser
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Edit Customer_User Information Form</title>
    <link rel="stylesheet" href="~/css/styleForm.css" type="text/css" />
</head>
<body>
    <h2>Edit Customer_User Information</h2>
    <form action="/CustomerUser/DoEditPerson" method="post">
        <p><input type="hidden" name="NewC.CustomerId" value="@Model.CustomerId" /></p>
        <p><input type="text" name="NewC.Name" value="@Model.Name" /></p>
        <p><input type="text" name="NewC.Gender" value="@Model.Gender" /></p>
        <p><input type="text" name="NewC.Dateofbirth" value="@Model.Dateofbirth" /></p>
        <p><input type="text" name="NewC.IdentityNumber" value="@Model.IdentityNumber" /></p>
        <p><input type="text" name="NewC.Email" value="@Model.Email" /></p>
        <p><input type="text" name="NewC.Phone" value="@Model.Phone" /></p>
        <p><input type="text" name="NewC.Username" value="@Model.Username" /></p>
        <p><input type="text" name="NewC.Address" value="@Model.Address" /></p>
        <p><input type="text" name="NewC.Password" value="@Model.Password" /></p>
        <p><input type="text" name="NewC.StaffID" value="@Model.StaffId" /></p>
        <p><input type="submit" value="Submit" /></p>
    </form>
</body>
</html>